<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    
    <div class="row" id="topHeader">
        <div class="col-sm-4 col-sm-4 col-xs-4">
            <div class="logo">
                <h1><a href="#">Hikers Paradise</a></h1>
                    <p>My Shop</p>
            </div>
        </div>
        
        <div class="col-sm-4 col-sm-4 col-xs-4">
            <div class="account">
                <form class="form-inline">
                    <input class="form-control" type="search" placeholder="Search Gears" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse navbar-dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hikers Paradise", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
            <div class="col-md-12 copyright">

                <div class="col-md-6 col-sm-6 copyright-left">
                    <p>&copy; @DateTime.Now.Year - HikersParadise. All right reserved.</p>
                </div>

                <div class="col-md-6 col-sm-6 copyright-right">
                    <p>FaceBook</p>
                    <p>Twitter</p>
                    <p>Instagram</p>
                </div>
            </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
